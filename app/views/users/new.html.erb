<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">New User</h4>
  </div>

  <div class="row justify-content-center">
    <%= form_with model: @users do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
        <% @users.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
        <% @users.errors.full_messages_for(:description).each do |message| %>
            <div><%= message %></div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
</div>