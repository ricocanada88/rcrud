<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Show details of users <%= @users.id %></h4>
  </div>
  <div class="row justify-content-center">
    <table class="table">
      <tbody>
        <tr>
          <th>Name:</th>
          <td><%= @users.name %></td>
        </tr>
        <tr>
          <th>Description:</th>
          <td><%= @users.description %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>